@{
    Layout = "~/Views/Shared/_LayoutCSM.cshtml";
}
@model List<Jewelery.ViewModels.DTO.Category.CategoryDTO>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
<script src="~/js/CMS/CategoryPositionModificator.js"></script>


<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-0 p-0 ">
    <div class="container-fluid justify-content-between p-0">
        <div class="navbar-collapse collapse d-sm-inline-flex ">
            <ul class="navbar-nav d-flex w-100 justify-content-around Nav__second__layout--theme" id="sortable">
                @foreach (var item in Model)
                {
                    <li class="nav-item flex-grow-1 text-center itemOfList" data-id="@item.Category_id">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">@item.Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<button type="submit" data-url="@Url.Action("UpdateViewOrder","Category")">Submit Order</button>
