@using Jewelery.localization

<link rel="stylesheet" href="~/scss/HeaderStyle.css" asp-append-version="true" />
<link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Playfair+Display+SC:ital,wght@0,400;0,700;0,900;1,400;1,700;1,900&display=swap" rel="stylesheet">

@{
    string culture = Context.Request.Cookies["Culture"] != null ? Context.Request.Cookies["Culture"] : "uk";
    //string culture = Context.Request.Cookies["Culture"];
    int CultureInt = culture != null ? (culture.Equals("uk") ? 1 : 2) : 1;
}

<script type="text/javascript" src="~/js/SearchDisplay.js"></script>
<script type="text/javascript" src="~/js/LocalizationChanger.js"></script>



<header class="sticky-top">
    <div class="row">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow m-0">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex d-flex justify-content-start">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <span class="LogoMargo">Margo <sub>Jewelery</sub></span>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex ">
                    <ul class="navbar-nav d-flex w-100 justify-content-center Nav__first__layout--theme">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">@Resource.Catalogue </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-fragment="OurHistorySection" asp-controller="Home" asp-action="Index">@Resource.About_Brand</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="DeliveryAndPayment">@Resource.Delivery_and_Payment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-fragment="accordionFaq" asp-controller="Home" asp-action="Index">@Resource.Frequently_asked_questions</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex ">
                    <ul class="navbar-nav d-flex w-100 justify-content-end">
                        <li class="nav-item culture">
                            <div class="dropdown">
                                <button class="btn btn-white dropdown-toggle nav-link" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                                    @if (culture.Equals("uk"))
                                    {
                                        <img src="~/SVG/UKR_FLAG.svg" />
                                    }
                                    else
                                    {
                                        <img src="~/SVG/ENG_FLAG.svg" />
                                    }
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                                    <li>
                                        <a class="nav-link text-dark btn" id="UKR">
                                            <img src="~/SVG/UKR_FLAG.svg" />
                                        </a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark btn" id="ENG">
                                            <img src="~/SVG/ENG_FLAG.svg" />
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark btn" id="searchButton" onclick="">
                                <i class="bi bi-search"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" target="_blank" href="https://www.instagram.com/margojewellery?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw==">
                                <i class="bi bi-instagram"></i>
                            </a>
                        </li>
                        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                        {                            
                            <li class="nav-item">
                                <div class="dropdown">
                                    <button class="btn btn-white dropdown-toggle nav-link text-dark" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-bounding-box"></i>
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li>
                                            <a class="nav-link text-dark" asp-area="" asp-controller="CMS" asp-action="CMSMain">CMS Menu</a>
                                        </li>
                                        <li>
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="LogOut">LogOut</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        }
                        else if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle nav-link text-dark" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-bounding-box"></i>
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li>
                                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">User Menu</a>
                                        </li>
                                        <li>
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="LogOut">LogOut</a>
                                        </li>
                                    </ul>
                                </div>                                
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="Login">
                                    <i class="bi bi-person-bounding-box"></i>
                                </a>
                            </li>  
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-heart"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Cart">
                                <i class="bi bi-bag"></i>
                            </a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
        <div id="SearchPlace" class="bg-white d-flex justify-content-center searchplace--theme SearchDivClose ">
            <form asp-controller="Shop" asp-action="Search" method="post">
                <input id="search" class="Input__search--theme" name="searchquerry" placeholder="Пошук по сайту" />
                <button type="submit" class="bg-white SubmitButton__search--theme">
                    <i class="bi bi-arrow-right SubmitButton__search--arrows"></i>
                </button>
            </form>
        </div>
    </div>
    <div class="row m-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-0 p-0 ">
            <div class="container-fluid justify-content-between p-0">
                <div class="navbar-collapse collapse d-sm-inline-flex ">
                    <ul class="navbar-nav d-flex w-100 justify-content-around Nav__second__layout--theme" id="category-menu">                        
                        @await Component.InvokeAsync("CategoryList",new {lang = CultureInt});
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</header>


